<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ActivityFragment"
    android:background="@color/lightGreen">

    <TextView
        android:id="@+id/text_home2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creaci_n_de_actividad"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <ImageButton
        android:id="@+id/ajustesBtn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <!-- Fecha asignaciÃ³n label -->

    <RadioGroup
        android:id="@+id/grupoTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tarea" />

        <RadioButton
            android:id="@+id/rbExamen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/examen" />
    </RadioGroup>

    <TextView
        android:id="@+id/labelAsignacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/fecha_de_asignaci_n"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grupoTipo" />

    <EditText
        android:id="@+id/inputAsignacion"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:hint="@string/seleccionar_fecha"
        android:focusable="false"
        android:clickable="true"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toTopOf="@+id/labelAsignacion"
        app:layout_constraintStart_toEndOf="@+id/labelAsignacion"/>

    <!-- Fecha entrega label -->
    <TextView
        android:id="@+id/labelEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/fecha_de_entrega"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelAsignacion" />

    <TextView
        android:id="@+id/labelTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:text="@string/tiempo_estimado_h"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelAsignacion" />

    <EditText
        android:id="@+id/inputEntrega"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:hint="@string/seleccionar_fecha"
        android:focusable="false"
        android:clickable="true"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toTopOf="@+id/labelEntrega"
        app:layout_constraintStart_toEndOf="@+id/labelEntrega"/>


    <EditText
        android:id="@+id/inputTiempo"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:background="@android:drawable/edit_text"
        android:gravity="top|start"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/labelTiempo"
        app:layout_constraintTop_toBottomOf="@+id/inputEntrega"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/labelTitulo"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="@string/titulo"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelEntrega" />

    <EditText
        android:id="@+id/inputTitulo"
        android:layout_width="242dp"
        android:layout_height="49dp"
        android:background="@android:drawable/edit_text"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEntrega"
        app:layout_constraintVertical_bias="0.285" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/crear"
        android:background="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/inputTitulo"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
